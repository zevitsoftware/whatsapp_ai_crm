# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (MySQL on Host)
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=crm_marketing
DB_USER=root
DB_PASSWORD=your_mysql_password

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# WAHA Configuration
WAHA_BASE_URL=http://waha:3000
WAHA_API_KEY=your_waha_api_key

# OCR Service Configuration
OCR_SERVICE_URL=http://ocr:5000

# Shared Media Volume
SHARED_MEDIA_PATH=/app/shared_media

# AI Providers (Optional - Configure in Database)
# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=...
# GROQ_API_KEY=...
# DEEPSEEK_API_KEY=...

# QRIS Payment Gateway (Optional)
QRIS_API_URL=https://api.qris.online
QRIS_MERCHANT_ID=your_merchant_id
QRIS_API_KEY=your_qris_api_key

# Application Settings
APP_NAME=Marketing Automation Engine
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,video/mp4

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
